<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

  <% if @user.errors.any? %>
  <div id="error_explanation">
   <ul style="color: red">
     <h3><%= @user.errors.count %>error prphibited this obj from being saced:</h3>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
  </div>
 <% end %>

    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
    <label for="user_name">Name</label>
    <div class="form-group">
     <%= f.text_field :name, class: 'form-control name' %>
    </div>
    <label for="user_image">Image</label>
    <div class="form-group">
     <%= f.file_field :profile_image, class: 'form-control-file user_image'%>
    </div>
    <label for="user_introduction">Introduction</label>
    <div class="form-group">
     <%= f.text_area :introduction, class: 'form-control introduction' %>
    </div>
    <div class="form-group">
     <%= f.submit 'Update User', class: 'btn btn-secondary' %>
    </div>
    <% end %>
   </div>
  </div>
 </div>
</main>
